# Email (SMTP) configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Who sends and who receives notification emails
EMAIL_FROM="RM TAWSSIL <no-reply@example.com>"
EMAIL_TO=owner@example.com

# Google Service Account for Sheets
# Create a service account, enable Google Sheets API, and share the target sheet with the service account email.
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
# IMPORTANT: Paste the private key as a single line; newlines must be escaped as \n
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----\n"

# Target spreadsheet
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
# Optional: sheet tab name (default: Submissions)
GOOGLE_SHEETS_SHEET_NAME=Submissions
